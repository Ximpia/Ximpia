{% block js %}

<script type="text/javascript" src="/site_media/js/jquery-plugins/jquery.passStrengthener.js"></script>
<script type="text/javascript" src="/site_media/js/jquery-plugins/jquery.bubblepopup.v2.3.1.min.js"></script>

<script language="JavaScript">

jQuery(document).ready(function($){

	// Password Strength
	$("#id_password").passStrengthener({
				userid:	"#id_ximpiaId",
				strengthCallback:function(score, strength)
					{						
						if(strength == 'good' || strength == 'strong')
						{
							$("#BtSignup").removeAttr('disabled');
						}
						else
						{
							$("#BtSignup").attr('disabled', 'disabled')
						}
					}
			});
	
	
	// Bubbles
	$('#id_XimpiaId_Info').CreateBubblePopup({

									position : 'right',
									align	 : 'center',
									
									innerHtml: 'Take a look to the <b>HTML source</b> of this page <br /> \
												to learn how the plugin works!',

									innerHtmlStyle: {
														color:'blue', 
														'text-align':'center'
													},
																		
									themeName: 	'blue',
									themePath: 	'/site_media/images/jquerybubblepopup-theme'
								 
	});

	
});

//Other

</script>

{% endblock %}

